description "Graylog collector"
author "Graylog, Inc. <hello@graylog.com>"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

setuid <%= @user %>
setgid <%= @group %>
console log

exec <%= @install_path %>/graylog-collector/bin/graylog-collector run -f <%= @config_dir %>/collector.conf
